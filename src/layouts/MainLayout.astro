---
// css
import '../styles/reset.css';
import '../styles/global.css';

// components
import Header from '../components/Header.astro';

const { pageTitle='e-astro' } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/solar-fire.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
    <Header />
    <h1>{pageTitle}</h1>
		<slot />
		<script>
			import '../scripts/menu'
		</script>
	</body>
</html>